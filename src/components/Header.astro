---
import '../styles/variables.css';
import { Image } from 'astro:assets';

const image_id = "1I3O9r6ERoMdwJbztHJYvXhPuykALf87A";
---

<header>
    <div class="header">
        <Image
                src={`https://drive.google.com/thumbnail?id=${image_id}&sz=w1800`}
                alt="Background"
                class="background"
                height={1}
                width={1}
                loading="eager"
        />
        <div class="content">
            <h1 class="header-title">ETHAN LEDOUX</h1>
            <p>JOKHAN FILM PRODUCTION</p>
        </div>
    </div>
</header>
<div class="navigation-menu">
    <nav style="transform: translateY(-50%);">
        <a href="/" class="button">ACCUEIL</a>
        <a href="/catalogue" class="button">MES FILMS</a>
        <a href="/contact" class="button">CONTACT</a>
    </nav>
</div>

<style>
    header {
        position: relative;
        padding: 0 10px;
        text-align: center;
        color: var(--light-inerted-background-color);
        z-index: 0;
        height: 500px;

        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    
    header .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(var(--imageAlpha));
        z-index: -1;
    }

    header .content .header-title {
        margin: 0;
        font-size: 3em;
        font-weight: bold;
    }

    header .content p {
        margin: 10px 0 0;
        font-size: 1.3em;
    }

    .navigation-menu {  
        height: 0;
        display: grid;
        justify-content: center;
        z-index: 2;
    }

    .navigation-menu nav {  
        text-align: center;
        background: var(--light-big-gray);
        padding: 10px 15px;
    }

    .navigation-menu nav a.button {
        display: inline-block;
        padding: 10px 20px;
        color: var(--light-inerted-background-color);
        text-decoration: none;
        border-radius: 5px;
    }

    .navigation-menu nav a.button:hover {
        color: var(--light-link-hover-color);
    }
</style>